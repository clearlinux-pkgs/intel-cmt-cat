From 712b9069bea89883ec2aafd559630951d279ed16 Mon Sep 17 00:00:00 2001
From: William Douglas <william.douglas@intel.com>
Date: Thu, 21 Feb 2019 10:23:28 -0800
Subject: [PATCH 2/2] Add destdir support

---
 Makefile        | 2 ++
 lib/Makefile    | 5 +++--
 pqos/Makefile   | 5 +++--
 rdtset/Makefile | 5 +++--
 4 files changed, 11 insertions(+), 6 deletions(-)

diff --git a/Makefile b/Makefile
index e23b892..5d26d1f 100644
--- a/Makefile
+++ b/Makefile
@@ -36,6 +36,8 @@
 ###############################################################################
 
 # XXX: modify as desired
+DESTDIR ?= /
+export DESTDIR
 PREFIX ?= /usr/local
 export PREFIX
 
diff --git a/lib/Makefile b/lib/Makefile
index 7c621ac..2cdd68d 100644
--- a/lib/Makefile
+++ b/lib/Makefile
@@ -98,9 +98,10 @@ OBJS := $(filter-out perf.o \
 endif
 
 HDR = pqos.h
+DESTDIR ?= /
 PREFIX ?= /usr/local
-LIB_INSTALL_DIR ?= $(PREFIX)/lib
-HDR_DIR ?= $(PREFIX)/include
+LIB_INSTALL_DIR ?= $(DESTDIR)/$(PREFIX)/lib
+HDR_DIR ?= $(DESTDIR)/$(PREFIX)/include
 DEPFILE = $(LIB).dep
 NOLDCONFIG ?= n
 
diff --git a/pqos/Makefile b/pqos/Makefile
index 83d5698..d0c9cd4 100644
--- a/pqos/Makefile
+++ b/pqos/Makefile
@@ -71,9 +71,10 @@ APP = pqos
 MAN = pqos.8
 
 # XXX: modify as desired
+DESTDIR ?= /
 PREFIX ?= /usr/local
-BIN_DIR = $(PREFIX)/bin
-MAN_DIR = $(PREFIX)/man/man8
+BIN_DIR = $(DESTDIR)/$(PREFIX)/bin
+MAN_DIR = $(DESTDIR)/$(PREFIX)/man/man8
 
 SRCS = $(sort $(wildcard *.c))
 OBJS = $(SRCS:.c=.o)
diff --git a/rdtset/Makefile b/rdtset/Makefile
index aaf3429..9752bc7 100644
--- a/rdtset/Makefile
+++ b/rdtset/Makefile
@@ -77,9 +77,10 @@ APP = rdtset
 MAN = rdtset.8
 
 # XXX: modify as desired
+DESTDIR ?= /
 PREFIX ?= /usr/local
-BIN_DIR = $(PREFIX)/bin
-MAN_DIR = $(PREFIX)/man/man8
+BIN_DIR = $(DESTDIR)/$(PREFIX)/bin
+MAN_DIR = $(DESTDIR)/$(PREFIX)/man/man8
 
 SRCS = $(sort $(wildcard *.c))
 OBJS = $(SRCS:.c=.o)
-- 
2.20.1

--- intel-cmt-cat-4.5.0/tools/membw/Makefile~	2022-12-15 12:17:00.000000000 +0000
+++ intel-cmt-cat-4.5.0/tools/membw/Makefile	2022-12-19 20:34:33.809123787 +0000
@@ -101,8 +101,8 @@
 	install -s $(APP) $(BIN_DIR)
 	install -m 0444 $(MAN) $(MAN_DIR)
 else
-	install -D -s $(APP) $(BIN_DIR)/$(APP)
-	install -m 0444 $(MAN) -D $(MAN_DIR)/$(MAN)
+	install -D -s $(APP) $(DESTDIR)$(BIN_DIR)/$(APP)
+	install -m 0444 $(MAN) -D $(MAN_DIR)/$(MAN)
 endif
 
 uninstall:
